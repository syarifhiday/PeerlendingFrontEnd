@{
    ViewData["Title"] = "My Lending";

    Layout = "_LayoutBorrower";
}

<div class="d-flex">
    <h2>My Lending</h2>
</div>
<table class="table table-striped" id="lendingTable">
    <thead>
        <tr>
            <th>Total Amount To Pay</th>
            <th>Interest Rate</th>
            <th>Duration</th>
            <th>Status</th>
            <th>Pay</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<!-- Modal for Paying Loan -->
<div class="modal fade" id="payLoanModal" tabindex="-1" role="dialog" aria-labelledby="payLoanModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="payLoanModalLabel">Pay Loan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Total Amount To Pay:</strong> <span id="modalTotalAmount"></span></p>
                <p><strong>Already Paid:</strong> <span id="modalRepaidAmount"></span></p>
                <p><strong>Remaining Balance:</strong> <span id="modalBalanceAmount"></span></p>

                <hr>
                <h5>Select Months to Pay</h5>
                <div id="monthlyPayments" class="form-check"></div>

                <hr>
                <p><strong>Total Selected Payment:</strong> <span id="totalPayment">0</span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="payLoan()">Pay</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/trnLending.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
}
